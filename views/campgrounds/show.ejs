<% include ./../partials/_header %>
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <h2>Yelp Camp</h2>
        <ul class="list-group">
          <li class="list-group-item active">List item 1</li>
          <li class="list-group-item">List item 2</li>
          <li class="list-group-item">List item 3</li>
          <li class="list-group-item">List item 4</li>
          <li class="list-group-item">List item 5</li>
        </ul>
      </div>
      <div class="col-md-9">
        <div class="thumbnail thumbnail-image-full-width">
          <img src="<%= camp.image %>" class="img-responsive"
            alt="image of <%= camp.image %>" />
          <div class="caption-full">
            <div class="space-between">
              <h4><a href="#"><%= camp.name %></a></h4>
              <h4>
                <i class="fa fa-usd" aria-hidden="true"></i>
                <%= camp.price %>/night
              </h4>
            </div>
            <br>
            <p><%- camp.description %></p>
            <p class="text-right">created by <em><%= camp.author.name %></em></p>
          </div>
        </div>

        <div class="well">
          <a href="/campgrounds/<%= camp.id %>/comments/new"
            class="btn btn-success pull-right">
            Leave a comment
          </a>
          <hr>
          <% camp.comments.forEach(function(comment){ %>
            <div class="bs-callout bs-callout-success">
              <p><%= comment.message %></p>
              <p class="text-right text-capitalize">- <%= comment.author.name %></p>
            </div>
          <% }) %>
        </div>
      </div>
    </div>
  </div>
<% include ./../partials/_footer %>
